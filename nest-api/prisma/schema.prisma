generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @default(autoincrement()) @id
  email String?
  userName  String @map("user_name")
  password  String
  available Boolean
  sex Int
  mobile String
  telephone String
  departmentId Int @map("department_id")
  departmentName  String? @map("department_name")
  lastLoginTime DateTime @default(now()) @map("last_login_time")
  createdTime DateTime @default(now()) @map("created_time")
  updatedTime DateTime @updatedAt @map("updated_time")

  @@map("user") // 映射的表名
}

model Role {
  id    Int     @default(autoincrement()) @id
  roleName  String @map("role_name")
  roleDesc  String? @map("role_desc")
  createdTime DateTime @default(now()) @map("created_time")
  updatedTime DateTime @updatedAt @map("updated_time")

  @@map("role") // 映射的表名
}

model Department {
  id    Int     @default(autoincrement()) @id
  fatherId    Int   @map("father_id")
  departmentName  String @map("department_name")
  orderNum Int @map("order_num")
  state  Boolean @default(true)
  createdTime DateTime @default(now()) @map("created_time")
  updatedTime DateTime @updatedAt @map("updated_time")

  @@map("department") // 映射的表名
}

model Menu{
  id    Int     @default(autoincrement()) @id
  fatherId    Int   @map("father_id")
  menuName  String @map("menu_name")
  menuType  String @map("menu_Type")
  alIcon  String?  @map("al_icon")
  icon  String? @map("icon")
  path  String
  code  String
  orderNum Int @map("order_num")
  status  Boolean @default(true)
  newLinkFlag  Boolean @default(false) @map("new_link_flag")
  visible  Boolean @default(true)
  createdTime DateTime @default(now()) @map("created_time")
  updatedTime DateTime @updatedAt @map("updated_time")

  @@map("menu") // 映射的表名
}

model SysRoleMenu{
  id    Int     @default(autoincrement()) @id
  roleId Int  @map("role_id")
  menuId Int @map("menu_id")
  createdTime DateTime @default(now()) @map("created_time")
  updatedTime DateTime @updatedAt @map("updated_time")

  @@map("sys_role_menu") // 映射的表名
}

model SysUserRole{
  id    Int     @default(autoincrement()) @id
  roleId Int  @map("role_id")
  userId Int @map("user_id")
  createdTime DateTime @default(now()) @map("created_time")
  updatedTime DateTime @updatedAt @map("updated_time")

  @@map("sys_user_role") // 映射的表名

}